{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "filigran team"
  ],
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "prConcurrentLimit": 10,
  "baseBranches": ["release/current", "master"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "prPriority": 5
    },
    {
      "matchDatasources": [
        "npm",
        "node-version"
      ],
      "commitMessagePrefix": "[frontend]"
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "commitMessagePrefix": "[backend]"
    },
    {
      "matchDatasources": [
        "docker",
        "orb"
      ],
      "commitMessagePrefix": "[tool]"
    },
    {
      "matchPackageNames": [
        "react-apexcharts"
      ],
      "commitMessagePrefix": "[DANGER]",
      "commitMessageSuffix": "(react-apexcharts has a yarn patch)"
    },
    {
      "matchPackageNames": [
        "html-to-image"
      ],
      "commitMessagePrefix": "[DANGER]",
      "commitMessageSuffix": "(html-to-image has a yarn patch)"
    },
    {
      "matchPackageNames": [
        "cronstrue"
      ],
      "commitMessagePrefix": "[DANGER]",
      "commitMessageSuffix": "(cronstrue will remove a functionality we use on a future release https://github.com/bradymholt/cRonstrue/pull/336)"
    },
    {
      "matchJsonata": ["$exists(isVulnerabilityAlert)"],
      "matchBaseBranches": ["release/current"],
      "enabled": false
    },
    {
      "matchJsonata": ["$not($exists(isVulnerabilityAlert))"],
      "matchBaseBranches": ["master"],
      "enabled": false
    },
    // Final Form should be removed from our project and replace by react-hook-form,
    {
      "matchPackageNames": ["final-form","final-form-arrays", "react-final-form", "react-final-form-arrays"],
      "enabled": false
    }
  ],
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ],
  "updateNotScheduled": false
}
